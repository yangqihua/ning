<script>
	import wepy from 'wepy'
	import HTTPUtil from '../utils/HTTPUtil'
	import {PUBLIC} from '../utils/constant'
	import tip from '../utils/tip'
	import commonMixins from '../mixins/common'
	export default class GoodsDetails extends wepy.page {
		config = {
			navigationBarTitleText: '商品详情',
			backgroundTextStyle: 'dark',
			navigationBarBackgroundColor: '#FFFFFF',
			navigationBarTextStyle: 'black',
			backgroundColor: '#fefefe'
		}
		mixins = [commonMixins];
		data = {
			hadCopy:false,
			id:'10419',
			type:'0',
			goodsDetails:{
				iid: '',
				name: '',
				pic: '',
				price: '',
				sales: '',
				rate: '',
				coupon_price: '',
				coupon_link:'',
				is_tmall: '',
				cid: '',
				s_price: '',
				commission: ''
			},
		}
		getGoodsDetails(id,type){
			let params = {
				url: 'agent/goods_details',
				isLoading: false,
				params: {id:id,type:type},
				scb: (res) => {
					this.goodsDetails = res;
					this.$apply();
					wx.setNavigationBarTitle({title: res.name})
				},
			}
			HTTPUtil.get(params);
		}
		onLoad(options) {
			if(options.hasOwnProperty('id') && options.hasOwnProperty('type')){
				this.id = options['id'];
				this.type = options['type'];
			}else{
				let scene = decodeURIComponent(options['scene']);
				if(scene.indexOf('_')>-1){
					let arr = scene.split('_');
					if(arr.length!=3){
						tip.error('二维码参数有误！');
					}
					this.id = arr[1];
					this.type = arr[2];
				}else{
					tip.error('错误:'+scene);
				}
			}

			this.getGoodsDetails(this.id,this.type);
		}
		onUnload(){
			this.hadCopy=false;
		}
		methods = {
			generate(){
				tip.confirm({text:"生成的图文包含小程序二维码，生成之后将保存至相册，可发送给好友或发表朋友圈"}).then((payload)=>{
					let userInfo = this.$parent.getUserInfo();
					let params = {
						url: 'utils/handle_share_pic',
						params: {
							openid:userInfo.openid,
							page:'pages/goods_details',
							id:this.id,
							type:this.type,
							pic:this.goodsDetails.pic,
							title:this.goodsDetails.name,
							s_price:this.goodsDetails.s_price,
							price:this.goodsDetails.price,
							coupon_price:this.goodsDetails.coupon_price,
						},
						scb: (res) => {
							console.log('res:',res);
							let url = res['url']
							wx.downloadFile({
								url: PUBLIC+url,
								success:function(res){
									HTTPUtil.deleteTempPic(url);
									wx.previewImage({
										urls: [res.tempFilePath] ,
										complete:()=>{
//											tip.success('complete')
										}
									})
								},
								fail:function(){
									tip.error('获取失败')
								}
							})
						},
					}
					HTTPUtil.get(params);
				}).catch(()=>{});
			},
			copyCode(){
				if(this.hadCopy){
					tip.confirm({text:'淘口令复制成功，请打开手机淘宝',cancelText:'看看教程',confirmText:'我知道了'}).then((res)=>{
					}).catch((res)=>{
						wx.navigateTo({url: '/pages/help/jiaocheng'});
					})
					return;
				}
				this.getTKL();
			},
		}

		computed={
			isAgent(){
				let userInfo = this.$parent.getUserInfo();
				return userInfo.agentCode=='1';
			}
		}

		getTKL(){
			tip.loading();
			let params = {
				url: 'agent/get_tkl',
				isLoading:false,
				params: {openid:'',iid:this.goodsDetails.iid,title:this.goodsDetails.name,pic:this.goodsDetails.pic,coupon_link:this.goodsDetails.coupon_link},
				scb: (res) => {
					wx.setClipboardData({
						data: res,
						success: (res)=>{
							tip.loaded();
							this.hadCopy = true;
							this.$apply();
							tip.confirm({text:'淘口令复制成功，请打开手机淘宝',cancelText:'看看教程',confirmText:'我知道了'}).then((res)=>{
							}).catch((res)=>{
								wx.navigateTo({url: '/pages/help/jiaocheng'});
							})
						}
					})
				},
				ecb:(err)=>{
					console.log('err:',err);
					tip.error(err)
				}
			}
			HTTPUtil.get(params);
		}
		onShareAppMessage(res) {
			let userInfo = this.$parent.getUserInfo();
			return tip.share(this.goodsDetails.name,this.goodsDetails.content,this.goodsDetails.pic,'/pages/goods_details?id='+this.id+'&type='+this.type+'&request_code='+userInfo.requestCode)
		}
	}
</script>

