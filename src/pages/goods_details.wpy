					<image src="{{goodsDetails.is_tmall==1?'http://ozb2xxoij.bkt.clouddn.com/tianmao.jpg':'http://ozb2xxoij.bkt.clouddn.com/taobao.jpg'}}"
					       class="logo"></image>
					{{goodsDetails.name}}
				</view>
			</view>
			<view class="details">
